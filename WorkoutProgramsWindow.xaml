<Window x:Class="PROJECT.WorkoutProgramsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Готовые комплексы" Height="500" Width="600">
    <ScrollViewer Margin="15">
        <ItemsControl x:Name="ProgramsList">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="#F9F9F9" Margin="0,0,0,10" Padding="15" CornerRadius="8" BorderBrush="#DDDDDD" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray" Margin="0,5,0,10"/>
                            <Button Content="Детали" Tag="{Binding}" Click="BtnDetails_Click" HorizontalAlignment="Left" Style="{StaticResource ButtonStyle}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</Window>