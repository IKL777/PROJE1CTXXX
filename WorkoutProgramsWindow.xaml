<Window x:Class="PROJECT.WorkoutProgramsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROJECT"
        mc:Ignorable="d"
        Title="WorkoutProgramsWindow" Height="450" Width="800">
    <!--Чтобы не добавлять по отдельности -->
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="TextStyle_TextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <ScrollViewer>
            <StackPanel>
                <TextBlock Text="Выберите программу:" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
                <ItemsControl x:Name="ProgramsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,8,0,12"/>
                                    <Button Content="Подробнее" Width="120" HorizontalAlignment="Left"
                                            Click="BtnDetails_Click" Tag="{Binding}"
                                            Style="{StaticResource ButtonStyle}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
