<Window x:Class="PROJECT.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация профиля" Height="750" Width="500"
        WindowStartupLocation="CenterOwner">
    <!--Чтобы не добавлять по отдельности -->
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="TextStyle_TextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Логин:" FontWeight="Bold"/>
            <TextBox x:Name="UsernameBox" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:" FontWeight="Bold"/>
            <Grid Margin="0,0,0,20" Width="Auto"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Stretch" Width="Auto" BorderBrush="Gray" />
                <TextBox x:Name="PasswordText" Visibility="Collapsed" BorderBrush="Gray" Width="Auto" />
                <Button x:Name="TogglePasswordButton" Content="👁️" Height="25" VerticalAlignment="Center" HorizontalAlignment="Right"
                    Click="TogglePasswordButton_Click" Background="Transparent" BorderBrush="Gray" Width="20" Grid.Column="1"/>
            </Grid>
            

            <TextBlock Text="Возраст:" FontWeight="Bold"/>
            <TextBox x:Name="AgeBox" Margin="0,0,0,10" Text="25"/>

            <TextBlock Text="Пол:" FontWeight="Bold"/>
            <ComboBox x:Name="GenderBox" SelectedIndex="0" Margin="0,0,0,10">
                <ComboBoxItem Content="Мужской"/>
                <ComboBoxItem Content="Женский"/>
            </ComboBox>

            <TextBlock Text="Рост (см):" FontWeight="Bold"/>
            <TextBox x:Name="HeightBox" Margin="0,0,0,20" Text="175"/>

            <TextBlock Text="Вес :" FontWeight="Bold"/>
            <TextBox x:Name="WeightBox" Margin="0,0,0,20" Text="68"/>


            <TextBlock Text="Уровень подготовки:" FontWeight="Bold"/>
            <ComboBox x:Name="FitnessLevelBox" SelectedIndex="0" Margin="0,0,0,10">
                <ComboBoxItem Content="Новичок"/>
                <ComboBoxItem Content="Средний"/>
                <ComboBoxItem Content="Продвинутый"/>
            </ComboBox>

            <TextBlock Text="Цель:" FontWeight="Bold"/>
            <ComboBox x:Name="GoalBox" SelectedIndex="0" Margin="0,0,0,20">
                <ComboBoxItem Content="Набор массы"/>
                <ComboBoxItem Content="Сушка"/>
                <ComboBoxItem Content="Выносливость"/>
            </ComboBox>

            <TextBlock Text="Доступное оборудование:" FontWeight="Bold"/>
            <ListBox x:Name="EquipmentBox" SelectionMode="Multiple" Height="100" Margin="0,0,0,20">
                <ListBoxItem Content="Гантели"/>
                <ListBoxItem Content="Штанга"/>
                <ListBoxItem Content="Тренажёры"/>
                <ListBoxItem Content="Вес тела"/>
            </ListBox>

            <TextBlock Text="Тренировок в неделю:" FontWeight="Bold"/>
            <ComboBox x:Name="WorkoutsPerWeekBox" SelectedIndex="1" Margin="0,0,0,10">
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
            </ComboBox>

            <TextBlock Text="Длительность тренировки (мин):" FontWeight="Bold"/>
            <ComboBox x:Name="DurationBox" SelectedIndex="1" Margin="0,0,0,20">
                <ComboBoxItem Content="30"/>
                <ComboBoxItem Content="45"/>
                <ComboBoxItem Content="60"/>
                <ComboBoxItem Content="75"/>
                <ComboBoxItem Content="90"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" Width="80" Margin="0,0,10,0" Click="Cancel_Click" Style="{StaticResource ButtonStyle}"/>
                <Button Content="Сохранить" Width="100" Click="Save_Click" Style="{StaticResource ButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>