<Window x:Class="PROJECT.MainNovigationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROJECT"
        mc:Ignorable="d"
        Title="Окно навигации" Height="600" Width="800">
    <!--Чтобы не добавлять по отдельности -->
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="TextStyle_TextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="20">
            
            <TextBlock x:Name="WelcomeText" 
                       Text="Добро пожаловать!" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,30"/>

            <Button Content="Мои тренировки" 
                    Height="40" 
                    Margin="0,0,0,15" 
                    Click="BtnWorkouts_Click"
                    Style="{StaticResource ButtonStyle}"/>

            <Button Content="Профиль" 
                    Height="40" 
                    Margin="0,0,0,15" 
                    Click="BtnProfile_Click"
                    Style="{StaticResource ButtonStyle}"/>

            <Button Content="Советы по восстановлению" 
                    Height="40" 
                    Margin="0,0,0,15" 
                    Click="BtnRecovery_Click"
                    Style="{StaticResource ButtonStyle}"/>

            <Button Content="Готовые комплексы" 
                    Height="40" 
                    Margin="0,0,0,15" 
                    Click="BtnPrograms_Click"
                    Style="{StaticResource ButtonStyle}"/>
            
            
            <Button Content="Карточки"
                    Margin="0,0,0,15" 
                    Height="40" 
                    Click="ButtonAdmin_Click" 
                    Style="{StaticResource ButtonStyle}"/>

            <Button Content="Выход" 
                    Height="40" 
                    Margin="0,30,0,0" 
                    Click="BtnLogout_Click"
                    Style="{StaticResource ButtonStyle}"/>

            <Button x:Name="BtnAdmin" Content="Закрыть программу ❌"
                    Margin="0 10 0 0" Click=" CloseALL_Click"
                    Style="{StaticResource ButtonStyle}"/>  
        </StackPanel>
        
    </Grid>
</Window>
