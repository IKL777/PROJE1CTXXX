<Window x:Class="PROJECT.WorkoutInputWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Добавить тренировку" Height="650" Width="900"
        WindowStartupLocation="CenterOwner">
   
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Дата и тип -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Дата:" VerticalAlignment="Center" Margin="0,0,10,0" Style="{StaticResource TextStyle_TextBlock}"/>
            <DatePicker x:Name="DatePicker" SelectedDate="{x:Static sys:DateTime.Now}" Width="150"/>

            <TextBlock Text="Тип:" VerticalAlignment="Center" Margin="30,0,10,0" Style="{StaticResource TextStyle_TextBlock}"/>
            <ComboBox x:Name="TypeComboBox" Width="140">
                <ComboBoxItem Content="WithWeights" IsSelected="True" />
                <ComboBoxItem Content="Bodyweight"/>
            </ComboBox>
        </StackPanel>

        <!-- Два списка -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Все упражнения -->
            <DockPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock DockPanel.Dock="Top" Text="Все упражнения" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" Style="{StaticResource TextStyle_TextBlock}"/>
                <ListBox x:Name="AvailableList"
                         ItemsSource="{Binding AvailableExercises}"
                         PreviewMouseLeftButtonDown="AvailableExercise_PreviewMouseDown"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         BorderBrush="Gray" BorderThickness="1"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="AliceBlue" CornerRadius="5" Padding="10" Margin="2" MinWidth="220">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" FontSize="12" Margin="0,5,0,0"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="Подходов: " FontSize="12"/>
                                        <TextBlock Text="{Binding Sets}" FontSize="12"/>
                                        <TextBlock Text=" | Повторений: " FontSize="12" Margin="10,0,0,0"/>
                                        <TextBlock Text="{Binding Reps}" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>

            <!-- Стрелка -->
            <TextBlock Grid.Column="1" Text="→" FontSize="28" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <!-- Выбранные упражнения -->
            <DockPanel Grid.Column="2" Margin="10,0,0,0">
                <TextBlock DockPanel.Dock="Top" Text="Выбранные упражнения" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" Style="{StaticResource TextStyle_TextBlock}"/>
                <ListBox x:Name="SelectedList"
                         ItemsSource="{Binding SelectedExercises}"
                         AllowDrop="True"
                         Drop="SelectedList_Drop"
                         DragOver="SelectedList_DragOver"
                         HorizontalContentAlignment="Stretch"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         BorderBrush="Green" BorderThickness="1"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="LightGreen" CornerRadius="5" Padding="10" Margin="2" MinWidth="300">
                                <StackPanel >
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        

                                        <Grid Margin="0,5,0,0">
                                            <Grid.ColumnDefinitions>
                                                <!-- "Подходов:" — по содержимому -->
                                                <ColumnDefinition Width="Auto"/>
                                                <!-- TextBox для Sets — заполняет часть пространства -->
                                                <ColumnDefinition Width="*"/>

                                                <!-- "Повторений:" -->
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>

                                                <!-- "Вес (кг):" -->
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>

                                                <!-- Кнопка удаления — фиксированная ширина -->
                                                <ColumnDefinition Width="50" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Подходов -->
                                            <TextBlock Text="Подходов: " Grid.Column="0" VerticalAlignment="Center"/>
                                            <TextBox Text="{Binding Sets, UpdateSourceTrigger=PropertyChanged,Converter={StaticResource StringToIntConverter}}" 
                                             Grid.Column="1" Margin="5,0,10,0" VerticalAlignment="Center"/>

                                            <!-- Повторений -->
                                            <TextBlock Text="Повторений: " Grid.Column="2" VerticalAlignment="Center"/>
                                            <TextBox Text="{Binding Reps, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToIntConverter}}" 
                                             Grid.Column="3" Margin="5,0,10,0" VerticalAlignment="Center"/>

                                            <!-- Вес -->
                                            <TextBlock Text="Вес (кг): " Grid.Column="4" VerticalAlignment="Center"/>
                                            <TextBox Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged,Converter={StaticResource StringToIntConverter}}" 
                                             Grid.Column="5" Margin="5,0,0,0" VerticalAlignment="Center"/>

                                            <!-- Кнопка -->
                                            <Button Content="🗑️" Grid.Column="6" Width="50" Height="20" Margin="0,0,0,0"
                                            Click="RemoveSelectedExercise_Click" 
                                            Style="{StaticResource Delete_ButtonStyle}"
                                            VerticalAlignment="Center"/>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Grid>

        <!-- Кнопка -->
        <Button Grid.Row="2" Content="Создать тренировку" HorizontalAlignment="Right" Width="160" Height="35"
                Click="AddButton_Click1" Margin="0,15,0,0" Style="{StaticResource ButtonStyle}"/>
    </Grid>
</Window>