<Window x:Class="PROJECT.WorkoutDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали тренировки" Height="400" Width="500">
    <!--Чтобы не добавлять по отдельности -->
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="TextStyle_TextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid Margin="15">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок с датой и типом -->
        <StackPanel Grid.Row="0">
            <TextBlock x:Name="DateText" FontSize="16" FontWeight="Bold"/>
            <TextBlock x:Name="TypeText" FontSize="14" Margin="0,5"/>
        </StackPanel>

        <!-- Список упражнений -->
        <ScrollViewer Grid.Row="1" Margin="0,15,0,0">
            <ItemsControl x:Name="ExercisesList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="AliceBlue" CornerRadius="5" Padding="10" Margin="0,5">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="{Binding DisplayText}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="2" Content="Закрыть" Width="100" Height="30" 
                HorizontalAlignment="Right" Margin="0,15,0,0"
                Click="BtnClose_Click"
                Style="{StaticResource ButtonStyle}"/>
    </Grid>
</Window>