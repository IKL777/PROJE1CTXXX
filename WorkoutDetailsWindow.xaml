<Window x:Class="PROJECT.WorkoutDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="Детали тренировки" Height="600" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock"     >     
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="TextStyle_TextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid Margin="15">
        <TabControl>
            <!-- Вкладка: Детали тренировки -->
            <TabItem Header="Детали">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock x:Name="DateText" FontSize="16" FontWeight="Bold"/>
                        <TextBlock x:Name="TypeText" FontSize="14" Margin="0,5"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" Margin="0,15,0,0">
                        <ItemsControl x:Name="ExercisesList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="AliceBlue" CornerRadius="5" Padding="10" Margin="0,5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                            <TextBlock Text="{Binding DisplayText}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Button Grid.Row="2" Content="Закрыть" Width="100" Height="30"
                            HorizontalAlignment="Right" Margin="0,15,0,0"
                            Click="BtnClose_Click"
                            Style="{StaticResource ButtonStyle}"/>
                </Grid>
            </TabItem>

            <!-- Вкладка: Сравнение -->
            <TabItem Header="Сравнение">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="ProgressHeader" Grid.Row="0" FontSize="16" FontWeight="Bold"/>

                    <ScrollViewer Grid.Row="1" Margin="0,15,0,0">
                        <ItemsControl x:Name="ProgressComparisonList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="LightGreen" CornerRadius="5" Padding="10" Margin="0,5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                            <TextBlock Text="{Binding ComparisonText}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Button Grid.Row="2" Content="Закрыть" Width="100" Height="30"
                            HorizontalAlignment="Right" Margin="0,15,0,0"
                            Click="BtnClose_Click"
                            Style="{StaticResource ButtonStyle}"/>
                </Grid>
            </TabItem>

            <!-- Вкладка: График -->
            <TabItem Header="График">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="ChartHeader" Grid.Row="0" FontSize="16" FontWeight="Bold" Text="Прогресс по упражнениям"/>

                    <!-- Выпадающий список для выбора упражнения -->
                    <ComboBox x:Name="ExerciseComboBox" Grid.Row="0" HorizontalAlignment="Left" Margin="0,30,0,0" Width="300"
                              SelectionChanged="ExerciseComboBox_SelectionChanged"/>

                    <!-- График -->
                    <lvc:CartesianChart x:Name="ProgressChart" Grid.Row="1" Margin="0,15,0,0"/>

                    <Button Grid.Row="2" Content="Закрыть" Width="100" Height="30"
                            HorizontalAlignment="Right" Margin="0,15,0,0"
                            Click="BtnClose_Click"
                            Style="{StaticResource ButtonStyle}"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>