<Window x:Class="PROJECT.WorkoutListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROJECT"
        mc:Ignorable="d"
        Title="Учёт тренировок" Height="450" Width="800">
    <!--Чтобы не добавлять по отдельности -->
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="TextStyle_TextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Добавить тренировку" Width="175" Click="AddWorkout_Click" Style="{StaticResource ButtonStyle}"/>
        </StackPanel>
        <StackPanel Margin="25,50,25,50">

            <ListBox x:Name="WorkoutList" Margin="0,10,0,0" Height="300" DisplayMemberPath="DisplayText" MouseDoubleClick="WorkoutList_MouseDoubleClick" SelectionChanged="WorkoutList_SelectionChanged" ScrollViewer.VerticalScrollBarVisibility="Visible" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10,0,0,10">
            <Button Content="Удалить тренировку" Click="DeleteWorkout_Click" Width="200" Height="30" Style="{StaticResource Delete_ButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
